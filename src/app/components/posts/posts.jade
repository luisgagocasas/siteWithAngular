.container
    .page-header
        h1 Blog
        ol.breadcrumb
            li
                a(ui-sref="posts") Articulos
.container                    
    div(ng-repeat="post in posts", ng-if="post.active==1")
        .row
            .col-md-1
                p
                    i.glyphicon.glyphicon-envelope.fa-4x
                p {{post.create}}
            .col-md-5
                a(href="#/posts/{{posts.indexOf(post)}}")
                    img(ng-src="{{post.image}}", class="img-responsive")
            .col-md-6
                h3
                    a(href="#/posts/{{posts.indexOf(post)}}") {{post.title}}
                p by 
                    a(href="#") Start Bootstrap
                p {{post.content[0] | limitTo:70}}...
                a(class="btn btn-primary", href="#/posts/{{posts.indexOf(post)}}") Read More 
                    i(class="fa fa-angle-right")
        hr